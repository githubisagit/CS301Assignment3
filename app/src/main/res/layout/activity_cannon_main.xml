<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tan19.cs301assignment3.CannonMainActivity"
    android:id="@+id/screen">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Angle (0 - 90)"
            android:id="@+id/AngleText" />

        <SeekBar
            android:layout_width="191dp"
            android:layout_height="50dp"
            android:id="@+id/angleSeekBar"
            android:layout_gravity="right"
            android:max="90"
            android:progress="0"
            android:indeterminate="false" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If Either Target Can&apos;t be Hit, Restart the App"
            android:id="@+id/hitText"
            android:textColor="#e3a1a1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch"
            android:id="@+id/launchButton" />

    </LinearLayout>
</LinearLayout>
